@model RecodeTrip.Models.Promocao

@{
    ViewData["Title"] = "Deletar";
}

<div class="body-destino">
<h1 class="titulo">Deletar</h1>

<h3 class="badge badge-danger">Quer mesmo deletar isto?</h3>
<div class="detalhes">
    <h4>Promocao</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Destino)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Destino.NomeDestino)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.avaliacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.avaliacao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.desconto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.desconto) %
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.valor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.valor)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a class="btn btn-dark" asp-action="Index">Voltar</a>
    </form>
</div>
</div>