@model RecodeTrip.Models.Promocao

@{
    ViewData["Title"] = "Detalhes";
}

<div class="body-destino">
<h1 class="titulo">Detalhes</h1>

<div class="detalhes">
    <h4>Promocao</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Destino)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Destino.NomeDestino)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.avaliacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.avaliacao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.desconto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.desconto) %
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.valor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.valor)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Editar</a> |
    <a asp-action="Index">Voltar</a>
</div>

</div>